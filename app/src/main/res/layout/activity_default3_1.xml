<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout n1:orientation="vertical"
    n1:background="#ff000000"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">

    <LinearLayout
        n1:orientation="horizontal"
        n1:id="@id/edit_title_layer"
        n1:background="#ff483334"
        n1:layout_width="fill_parent"
        n1:layout_height="45.0dip">

        <TextView
            n1:textSize="16.0dip"
            n1:textStyle="bold"
            n1:textColor="#ffffffff"
            n1:gravity="center"
            n1:layout_gravity="center"
            n1:id="@id/edit_title_cancel"
            n1:layout_width="0.0dip"
            n1:layout_height="wrap_content"
            n1:text="Undo Edit"
            n1:layout_weight="1.0" />

        <TextView
            n1:textSize="16.0dip"
            n1:textStyle="bold"
            n1:textColor="#ffffffff"
            n1:gravity="center"
            n1:layout_gravity="center"
            n1:id="@id/edit_title_count"
            n1:layout_width="0.0dip"
            n1:layout_height="wrap_content"
            n1:text="1/5"
            n1:layout_weight="1.0" />

        <TextView
            n1:textSize="16.0dip"
            n1:textStyle="bold"
            n1:textColor="#ffffffff"
            n1:gravity="center"
            n1:layout_gravity="center"
            n1:id="@id/edit_title_ok"
            n1:layout_width="0.0dip"
            n1:layout_height="wrap_content"
            n1:text="All Register"
            n1:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        n1:orientation="horizontal"
        n1:id="@id/edit_btn_layer"
        n1:background="#ffbababa"
        n1:layout_width="fill_parent"
        n1:layout_height="37.0dip"
        n1:layout_alignParentBottom="true">

        <LinearLayout
            n1:gravity="center"
            n1:layout_gravity="center"
            n1:orientation="horizontal"
            n1:id="@id/picker_edit_rotate_layer"
            n1:background="#fff2f2f2"
            n1:layout_width="0.0dip"
            n1:layout_height="fill_parent"
            n1:layout_marginRight="1.0dip"
            n1:layout_weight="1.0">

            <TextView
                n1:id="@id/picker_edit_rotate"
                n1:layout_width="wrap_content"
                n1:layout_height="35dp"
                n1:layout_gravity="center"
                n1:drawableLeft="@drawable/ico_rotate"
                n1:drawablePadding="10.0dip"
                n1:gravity="center"
                n1:text="Rotation"
                n1:textColor="#ff3a3a3a"
                n1:textSize="15.0dip"
                n1:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            n1:gravity="center"
            n1:layout_gravity="center"
            n1:orientation="horizontal"
            n1:id="@id/picker_edit_crop_layer"
            n1:background="#fff2f2f2"
            n1:layout_width="0.0dip"
            n1:layout_height="fill_parent"
            n1:layout_marginLeft="1.0dip"
            n1:layout_weight="1.0">

            <TextView
                n1:textSize="15.0dip"
                n1:textStyle="bold"
                n1:textColor="#ff3a3a3a"
                n1:gravity="center"
                n1:layout_gravity="center"
                n1:id="@id/picker_edit_crop"
                n1:layout_width="wrap_content"
                n1:layout_height="fill_parent"
                n1:text="Crop"
                n1:drawableLeft="@drawable/ico_crop"
                n1:drawablePadding="10.0dip" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_above="@id/edit_btn_layer"
        n1:layout_below="@id/edit_title_layer">

        <android.support.v4.view.ViewPager
            n1:id="@id/edit_Image_viewpager"
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent" />
    </FrameLayout>

    <ImageView
        n1:id="@id/edit_btn_left"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:src="@drawable/arrow_left"
        n1:layout_alignParentLeft="true"
        n1:layout_centerVertical="true" />

    <ImageView
        n1:id="@id/edit_btn_right"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:src="@drawable/arrow_right"
        n1:layout_alignParentRight="true"
        n1:layout_centerVertical="true" />
</RelativeLayout>