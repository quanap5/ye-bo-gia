<?xml version="1.0" encoding="utf-8"?>
<FrameLayout n1:background="#fff2f2f5"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">

    <ImageView
        n1:id="@id/image"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:src="@drawable/default_image"
        n1:scaleType="centerInside" />

    <View
        n1:id="@id/mask"
        n1:background="#88000000"
        n1:visibility="gone"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent" />

    <com.housejh.library.multiimagechooser.view.CheckBoxCircle n1:layout_gravity="center|right|top"
        n1:id="@id/checkmark"
        n1:padding="6.0dip"
        n1:layout_width="38.0dip"
        n1:layout_height="38.0dip"
        n2:checkbox_color="@color/color_48baf3"
        n2:checkbox_size="32.0dip"
        n2:show_border_in_check_state="true"
        xmlns:n2="http://schemas.android.com/apk/res-auto" />
</FrameLayout>