<?xml version="1.0" encoding="utf-8"?>
<LinearLayout n1:gravity="center"
    n1:orientation="horizontal"
    n1:background="#cc1e1a1a"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">

    <LinearLayout
        n1:layout_gravity="center"
        n1:orientation="vertical"
        n1:layout_width="304.0dip"
        n1:layout_height="wrap_content"
        n1:layout_marginLeft="10.0dip"
        n1:layout_marginRight="10.0dip">

        <RelativeLayout
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent">

            <LinearLayout
                n1:gravity="center_vertical"
                n1:orientation="horizontal"
                n1:id="@id/callpop_layer_title"
                n1:background="@drawable/quick_request_header"
                n1:layout_width="fill_parent"
                n1:layout_height="38.0dip"
                n1:layout_alignParentLeft="true">

                <ImageView
                    n1:id="@id/callpop_recv_title_img"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="17.0dip"
                    n1:src="@drawable/quick_request_header_txt" />
            </LinearLayout>

            <LinearLayout
                n1:orientation="vertical"
                n1:background="@drawable/quick_request_background"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_below="@id/callpop_layer_title"
                n1:layout_alignParentLeft="true">

                <LinearLayout
                    n1:orientation="vertical"
                    n1:background="#ffffffff"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content">

                    <LinearLayout
                        n1:gravity="center_horizontal"
                        n1:orientation="horizontal"
                        n1:paddingTop="22.0dip"
                        n1:paddingBottom="11.0dip"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content">

                        <RelativeLayout
                            n1:layout_width="70.0dip"
                            n1:layout_height="75.0dip"
                            n1:layout_marginRight="30.0dip">

                            <com.jhproject.library.polygonimageview.PolygonImageView n1:id="@id/callpop_recv_picture"
                                n1:layout_width="69.0dip"
                                n1:layout_height="69.0dip"
                                n1:src="@drawable/callpop_picture"
                                n2:poly_border="true"
                                n2:poly_border_color="#ffd6d7dd"
                                n2:poly_border_width="2.0dip"
                                n2:poly_corner_radius="10.0"
                                n2:poly_rotation_angle="0.0"
                                n2:poly_shadow="false"
                                n2:poly_vertices="0"
                                xmlns:n2="http://schemas.android.com/apk/res-auto" />

                            <ImageView
                                n1:id="@id/callpop_recv_picture2"
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:src="@drawable/quick_request_icon01"
                                n1:layout_alignParentBottom="true"
                                n1:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <LinearLayout
                            n1:layout_gravity="center_vertical"
                            n1:orientation="vertical"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content">

                            <TextView
                                n1:textSize="16.0dip"
                                n1:textStyle="bold"
                                n1:textColor="#ff2891b6"
                                n1:gravity="center_horizontal"
                                n1:id="@id/callpop_recv_name"
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text="파랑새체리향기 "
                                n1:textScaleX="0.9" />

                            <TextView
                                n1:textSize="14.0dip"
                                n1:textStyle="bold"
                                n1:textColor="#ff2891b6"
                                n1:gravity="center_horizontal"
                                n1:id="@id/callpop_recv_area"
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text="(남/40세/부산)"
                                n1:textScaleX="0.9" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        n1:gravity="center_horizontal"
                        n1:orientation="horizontal"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content">

                        <TextView
                            n1:textSize="20.0dip"
                            n1:textStyle="bold"
                            n1:textColor="#ff483334"
                            n1:gravity="center_horizontal"
                            n1:id="@id/callpop_recv_wati_count"
                            n1:layout_width="fill_parent"
                            n1:layout_height="wrap_content"
                            n1:layout_marginBottom="13.0dip"
                            n1:text="25초 후 자동 거절됩니다."
                            n1:textScaleX="1.0" />
                    </LinearLayout>

                    <LinearLayout
                        n1:gravity="center"
                        n1:orientation="horizontal"
                        n1:id="@id/linearLayout"
                        n1:paddingLeft="10.0dip"
                        n1:paddingRight="10.0dip"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:weightSum="12.0">

                        <ImageView
                            n1:id="@id/callpop_recv_call_ok"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:src="@drawable/quick_request_call_btn"
                            n1:layout_weight="3.0" />

                        <ImageView
                            n1:id="@id/callpop_recv_call_deny"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:src="@drawable/quick_request_calloff_btn"
                            n1:layout_weight="3.0" />

                        <ImageView
                            n1:id="@id/callpop_recv_call_refuse"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:src="@drawable/quick_request_end_btn"
                            n1:layout_weight="3.0" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    n1:orientation="vertical"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginTop="15.0dip"
                    n1:layout_marginBottom="10.0dip">

                    <ImageView
                        n1:id="@id/callpop_recv_divid"
                        n1:background="#ffc3c3c3"
                        n1:layout_width="fill_parent"
                        n1:layout_height="1.0dip"
                        n1:layout_marginBottom="10.0dip" />

                    <TextView
                        n1:textSize="11.0dip"
                        n1:textColor="#ff483334"
                        n1:id="@id/callpop_recv_desc1"
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_marginLeft="10.0dip"
                        n1:text=" - 나와 상대방의 전화번호가 남지 않습니다."
                        n1:textScaleX="1.1" />

                    <TextView
                        n1:textSize="11.0dip"
                        n1:textColor="#ff483334"
                        n1:id="@id/callpop_recv_desc2"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_marginLeft="10.0dip"
                        n1:layout_marginTop="6.0dip"
                        n1:text=" - 차단하면 이 회원에게 대화신청을 받을 수 없습니다."
                        n1:textScaleX="1.1" />

                    <TextView
                        n1:textSize="11.0dip"
                        n1:textColor="#ff483334"
                        n1:id="@id/callpop_recv_desc3"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_marginLeft="10.0dip"
                        n1:layout_marginTop="6.0dip"
                        n1:text=" - 차단 해제는 더보기>차단회원관리에서 가능합니다."
                        n1:textScaleX="1.1" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                n1:id="@id/callpop_recv_icon"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_marginTop="12.0dip"
                n1:layout_marginRight="23.0dip"
                n1:src="@drawable/quick_request_logo"
                n1:layout_alignParentRight="true"
                n1:contentDescription="@string/bitmap_image" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>