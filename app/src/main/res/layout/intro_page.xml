<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/layout_pager_top"
        android:background="@drawable/intro_img_topphoto1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/layout_pager_middle"
        android:background="@drawable/intro_img_guideareabgpattern"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:tileMode="repeat">

        <ImageView
            android:id="@id/pager_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/intro_img_guide1_element" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/layout_pager_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_weight="0.2"
        android:background="@drawable/intro_img_blurredbg1"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@id/pager_ring1"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="60.0dip"
            android:layout_weight="0.5"
            android:src="@drawable/intro_img_couplering" />

        <ImageView
            android:id="@id/pager_ring2"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="60.0dip"
            android:layout_weight="0.5"
            android:src="@drawable/intro_img_couplering" />
    </LinearLayout>
</LinearLayout>