<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">

    <LinearLayout
        n1:orientation="horizontal"
        n1:id="@id/layout_chat_message_user"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content">

        <TextView
            n1:textSize="14.0sp"
            n1:textStyle="bold"
            n1:id="@id/layout_chat_message_text_nick"
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:layout_marginLeft="20.0dip"
            n1:text="유저닉"
            n1:layout_weight="2.0" />

        <TextView
            n1:textSize="14.0sp"
            n1:id="@id/layout_chat_message_text_message"
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:text="유저 메세지"
            n1:layout_weight="1.0" />
    </LinearLayout>

    <RelativeLayout
        n1:id="@id/layout_chat_message_system"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_centerHorizontal="true">

        <TextView
            n1:textSize="14.0sp"
            n1:textStyle="bold"
            n1:textColor="#ffff5262"
            n1:id="@id/layout_chat_message_system_text_chat"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="시스템메세지"
            n1:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>